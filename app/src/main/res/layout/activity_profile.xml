<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="650dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/emailAddressHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User email:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintLeft_toLeftOf="@+id/welcomeText"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/emailAddressDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressHeader"
        app:layout_constraintLeft_toLeftOf="@+id/emailAddressHeader"
        android:layout_marginStart="30dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/fullNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User full name:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressDisplay"
        app:layout_constraintLeft_toLeftOf="@+id/welcomeText"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/fullNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fullNameHeader"
        app:layout_constraintLeft_toLeftOf="@+id/fullNameHeader"
        android:layout_marginStart="30dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User age:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fullNameDisplay"
        app:layout_constraintLeft_toLeftOf="@+id/welcomeText"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ageDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ageHeader"
        app:layout_constraintLeft_toLeftOf="@+id/ageHeader"
        android:layout_marginStart="30dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/choosePokemonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your pokemon"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_500"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintTop_toBottomOf="@+id/ageDisplay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosePokemonButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>